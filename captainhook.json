{
	"config": {
		"bootstrap": ".Build/vendor/autoload.php"
	},
	"commit-msg": {
		"enabled": true,
		"actions": []
	},
	"pre-push": {
		"enabled": false,
		"actions": []
	},
	"pre-commit": {
		"enabled": true,
		"actions": [
			{
				"action": ".Build/bin/ec -e .Build -e Resources/Private/Frontend/node_modules -e Resources/Public/JavaScript",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\All",
						"args": [
							[]
						]
					}
				]
			},
			{
				"action": "composer lint:php -- --dry-run",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"*.php",
								".php_cs"
							]
						]
					}
				]
			},
			{
				"action": "composer lint:typoscript -- --fail-on-warnings",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"*.typoscript",
								"*.tsconfig"
							]
						]
					}
				]
			},
			{
				"action": "composer sca -- --memory-limit=2G",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"*.php",
								"phpstan.neon"
							]
						]
					}
				]
			},
			{
				"action": "composer normalize --dry-run --no-check-lock --no-update-lock",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"composer.json"
							]
						]
					}
				]
			},
			{
				"action": "ddev composer test",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"*.php",
								"phpunit.*.xml"
							]
						]
					}
				]
			},
			{
				"action": "yarn --cwd Resources/Private/Frontend lint",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\InDirectory",
						"args": [
							"Resources/Private/Frontend"
						]
					}
				]
			},
			{
				"action": "yarn --cwd Resources/Private/Frontend build && git add Resources/Public/Css Resources/Public/JavaScript",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\InDirectory",
						"args": [
							"Resources/Private/Frontend"
						]
					}
				]
			}
		]
	},
	"prepare-commit-msg": {
		"enabled": false,
		"actions": []
	},
	"post-commit": {
		"enabled": false,
		"actions": []
	},
	"post-merge": {
		"enabled": false,
		"actions": []
	},
	"post-checkout": {
		"enabled": false,
		"actions": []
	},
	"post-rewrite": {
		"enabled": false,
		"actions": []
	},
	"post-change": {
		"enabled": false,
		"actions": []
	}
}
