{
	"config": {
		"bootstrap": ".Build/vendor/autoload.php"
	},
	"commit-msg": {
		"enabled": true,
		"actions": []
	},
	"pre-push": {
		"enabled": false,
		"actions": []
	},
	"pre-commit": {
		"enabled": true,
		"actions": [
			{
				"action": ".Build/bin/ec --git-only",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\All",
						"args": [
							[]
						]
					}
				]
			},
			{
				"action": "composer lint:php -- --dry-run",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"*.php",
								".php-cs-fixer.php"
							]
						]
					}
				]
			},
			{
				"action": "composer sca:php -- --memory-limit=2G",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"*.php",
								"phpstan.neon"
							]
						]
					}
				]
			},
			{
				"action": "composer lint:composer -- --dry-run",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"composer.json"
							]
						]
					}
				]
			},
			{
				"action": "composer test",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\Any",
						"args": [
							[
								"*.php",
								"phpunit.ci.xml",
								"phpunit.xml"
							]
						]
					}
				]
			},
			{
				"action": "yarn --cwd Resources/Private/Frontend lint",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\InDirectory",
						"args": [
							"Resources/Private/Frontend"
						]
					}
				]
			},
			{
				"action": "yarn --cwd Resources/Private/Frontend build && git add Resources/Public/Css Resources/Public/JavaScript",
				"options": [],
				"conditions": [
					{
						"exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\InDirectory",
						"args": [
							"Resources/Private/Frontend"
						]
					}
				]
			}
		]
	},
	"prepare-commit-msg": {
		"enabled": false,
		"actions": []
	},
	"post-commit": {
		"enabled": false,
		"actions": []
	},
	"post-merge": {
		"enabled": false,
		"actions": []
	},
	"post-checkout": {
		"enabled": false,
		"actions": []
	},
	"post-rewrite": {
		"enabled": false,
		"actions": []
	},
	"post-change": {
		"enabled": false,
		"actions": []
	}
}
